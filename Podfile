# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'HCSocialSignIn' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Facebook pods
  pod 'FBSDKCoreKit'
  pod 'FBSDKShareKit'
  pod 'FBSDKLoginKit'

  # HUD
  pod 'PKHUD', '~> 5.0'

  # Network
  pod 'Alamofire'
  pod 'AlamofireImage'

  target 'HCSocialSignInTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'HCSocialSignInUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
